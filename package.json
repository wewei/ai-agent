{
  "name": "electron-ai-chat",
  "version": "1.0.0",
  "description": "AI Chat Bot built with Electron",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:renderer\" \"wait-on tcp:3000 -v --timeout 3000 && npm run dev:main\"",
    "dev:main": "tsc -p electron/tsconfig.json && cross-env NODE_ENV=development electron .",
    "dev:renderer": "cross-env NODE_ENV=development vite",
    "start": "cross-env NODE_ENV=production electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p electron/tsconfig.json",
    "build:renderer": "cross-env NODE_ENV=production vite build",
    "watch": "tsc -p electron/tsconfig.json -w"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.13.0",
    "@mui/icons-material": "^5.11.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "electron": "^24.3.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.5",
    "wait-on": "^8.0.2"
  }
}
